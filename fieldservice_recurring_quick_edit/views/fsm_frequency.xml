<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_frequency_set_form_view" model="ir.ui.view">
        <field name="model">fsm.frequency.set</field>
        <field
            name="inherit_id"
            ref="fieldservice_recurring.fsm_frequency_set_form_view"
        />
        <field name="arch" type="xml">
            <field name="buffer_late" position="after">
                <field name="is_quick_edit" />
                <field name="fsm_recurring_id" readonly="True" />
            </field>
            <field name="fsm_frequency_ids" position="attributes">
                <attribute name="attrs">
                    {'readonly': [('is_quick_edit', '=', True)]}</attribute>
                <attribute name="domain">[('fsm_recurring_id', '=', False)]</attribute>
                <!-- frequency defined from recurring order must but managed from
                the recurring order -->
            </field>
        </field>
    </record>
    <record id="fsm_frequency_form_view" model="ir.ui.view">
        <field name="model">fsm.frequency</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_frequency_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='weekdays']" position="before">
                <field name="interval_frequency" />
                <field name="is_quick_editable" />
                <div
                    attrs="{'invisible': [('use_byweekday', '=', False)]}"
                    name="weekdays"
                >
                    <group>
                        <field name="use_planned_hour" />
                    </group>
                </div>
                <div
                    attrs="{'invisible': [('use_planned_hour', '=', False)]}"
                    name="hours"
                >
                    <group>
                        <field name="planned_hour" widget="float_time" />
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
