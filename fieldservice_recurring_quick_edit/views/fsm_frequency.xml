<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_frequency_set_form_view" model="ir.ui.view">
        <field name="model">fsm.frequency.set</field>
        <field
            name="inherit_id"
            ref="fieldservice_sale_frequency.fsm_frequency_set_form_view_inherit_sale"
        />
        <field name="arch" type="xml">
            <field name="buffer_late" position="after">
                <field name="fsm_concrete_recurring_id" attrs="{'invisible': [('is_abstract', '=', True)]}"/>
            </field> 

           <!--  <field name="fsm_concrete_frequency_ids" position="attributes">
                <attribute name="domain">[
                    ('fsm_recurring_id', '=', False),
                    ('is_abstract', '=', False)
                ]</attribute>
            </field> -->
        </field>
    </record>
    <record id="fsm_frequency_form_view" model="ir.ui.view">
        <field name="model">fsm.frequency</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_frequency_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet/group[1]" position="after">
                <group>
                    <label for="interval_frequency" />
                    <div class="o_row">
                        <field name="interval_frequency" />
                    </div>
                    <field name="is_quick_editable" invisible="1" />
                </group>
                <group>
                    <field name="planned_hour" widget="float_time" />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
