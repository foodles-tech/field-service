<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_recurring_form_view" model="ir.ui.view">
        <field name="model">fsm.recurring</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_recurring_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_fms_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-pencil-square-o"
                    attrs="{'invisible': [('fsm_order_count', '=', 0)]}"
                >
                    <field name="fsm_order_count" widget="statinfo" string="Orders" />
                </button>
            </xpath>
            <button name="action_cancel" position="before">
                <button
                    id="generate_orders"
                    name="generate_orders"
                    string="Generate Orders"
                    type="object"
                />
                <button
                    id="generate_5w"
                    name="generate_5w"
                    string="Generate 5w FSM"
                    type="object"
                />
            </button>
            <field name="fsm_frequency_set_id" position="attributes">
                <attribute name="attrs">{'readonly': True}</attribute>
            </field>
            <xpath expr="//field[@name='fsm_order_template_id']/../.." position="after">
                <group>
                    <field name="edit_type" />
                    <field name="fsm_abstract_frequency_set_id" />
                    <field
                        name="fsm_frequency_qedit_ids"
                        attrs="{'invisible': [('edit_type', '=', 'advanced')]}"
                        widget="section_and_note_one2many"
                        mode="tree,form"
                        context="{'default_fsm_recurring_id': active_id,
                                      'default_interval_type': 'weekly',
                                      'default_interval_frequency': '6',} "
                        create="false"
                    >
                        <tree editable="bottom">
                            <field name="day_quick_edit" attrs="{'readonly': [('is_quick_editable', '=', False)]}" />
                            <field name="name" />
                            <field name="interval_frequency" />
                            <field name="interval_type" />
                            <field name="planned_hour" widget="float_time" />
                            <field name="use_planned_hour" invisible="1" />
                            <field name="use_byweekday" invisible="1" />
                            <field name="is_quick_editable"/>
                            <field name="mo" invisible="1" />
                            <field name="tu" invisible="1" />
                            <field name="we" invisible="1" />
                            <field name="th" invisible="1" />
                            <field name="fr" invisible="1" />
                            <field name="sa" invisible="1" />
                            <field name="su" invisible="1" />
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="day_quick_edit" />
                                    <field name="name" />
                                    <field name="interval_frequency" />
                                    <field name="mo" invisible="1" />
                                    <field name="tu" invisible="1" />
                                    <field name="we" invisible="1" />
                                    <field name="th" invisible="1" />
                                    <field name="fr" invisible="1" />
                                    <field name="sa" invisible="1" />
                                    <field name="su" invisible="1" />
                                    <field name="planned_hour" widget="float_time" />
                                    <field name="interval_type"/>
                                    <field name="use_planned_hour" invisible="1" />
                                    <field name="use_byweekday" invisible="1" />
                                </group>
                            </group>
                        </form>
                    </field>
                    <field
                        name="fsm_frequency_ids"
                        attrs="{'invisible': [('edit_type', '=', 'quick_edit')]}"
                        widget="section_and_note_one2many"
                        mode="tree"
                        context="{'default_fsm_recurring_id': active_id,
                                      'default_interval_type': 'weekly',
                                      'default_interval_frequency': '6',
                                      'form_view_ref': 'fieldservice_recurring.fsm_frequency_form_view',}"
                    >
                        <tree>
                            <field name="name" />
                            <field name="week_day" />
                            <field name="interval_frequency" />
                            <field name="planned_hour" widget="float_time" />
                            <field name="interval_type" />
                            <field name="use_planned_hour" invisible="1" />
                            <field name="use_byweekday" invisible="1" />
                            <field name="use_bymonth" invisible="1" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
