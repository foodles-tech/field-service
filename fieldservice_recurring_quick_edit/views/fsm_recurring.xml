<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="fsm_recurring_form_view" model="ir.ui.view">
        <field name="model">fsm.recurring</field>
        <field name="inherit_id" ref="fieldservice_recurring.fsm_recurring_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_fms_order" type="object" class="oe_stat_button" icon="fa-pencil-square-o" attrs="{'invisible': [('fsm_order_count', '=', 0)]}">
                    <field name="fsm_order_count" widget="statinfo" string="Orders" />
                </button>
            </xpath>
            <field name="fsm_frequency_set_id" position="attributes">
                <attribute name="attrs">{'readonly': True, 'invisible': True}</attribute>
            </field>
            <xpath expr="//field[@name='fsm_order_template_id']/../.." position="after">
                <group>
                    <field name="fsm_abstract_frequency_set_id" />
                </group>
                <field name="id" invisible="1" />
                <p attrs="{'invisible': [('id', '!=', False)]}">You must save first to change frequencies</p>
                <group attrs="{'invisible': [('id', '=', False)]}">
                    <field name="edit_type" readonly="1" />

                    <field name="fsm_quick_edit_concrete_frequency_ids" attrs="{'invisible': [('edit_type', '!=', 'quick_edit')]}" widget="section_and_note_one2many" mode="tree,form" context="{'default_fsm_recurring_id': active_id,
                                      'default_interval_type': 'monthly',
                                      'default_interval_frequency': '6',} " create="false">
                        <tree editable="bottom">
                            <field name="interval_frequency" />
                            <field name="day_quick_edit" attrs="{'readonly': [('is_quick_editable', '=', False)]}" />
                            <field name="name" invisible="1" />
                            <field name="interval_type" invisible="1" />
                            <field name="planned_hour" widget="float_time" />
                            <field name="use_byweekday" invisible="1" />
                            <field name="set_pos" invisible="1" />
                            <field name="is_quick_editable" invisible="1" />
                            <field name="origin" invisible="1" />
                            <field name="fsm_recurring_id" invisible="1" readonly="0" />
                            <field name="mo" invisible="1" />
                            <field name="tu" invisible="1" />
                            <field name="we" invisible="1" />
                            <field name="th" invisible="1" />
                            <field name="fr" invisible="1" />
                            <field name="sa" invisible="1" />
                            <field name="su" invisible="1" />
                        </tree>
                        <form>
                            <group>
                                <group>
                                    <field name="day_quick_edit" />
                                    <field name="name" />
                                    <field name="interval_frequency" />
                                    <field name="mo" invisible="1" />
                                    <field name="tu" invisible="1" />
                                    <field name="we" invisible="1" />
                                    <field name="th" invisible="1" />
                                    <field name="fr" invisible="1" />
                                    <field name="sa" invisible="1" />
                                    <field name="su" invisible="1" />
                                    <field name="fsm_recurring_id" invisible="1" readonly="0" />
                                    <field name="planned_hour" widget="float_time" />
                                    <field name="interval_type" />
                                    <field name="use_byweekday" invisible="1" />
                                    <field name="set_pos" invisible="1" />
                                </group>
                            </group>
                        </form>
                    </field>
                    <field name="fsm_advanced_concrete_frequency_ids" attrs="{'invisible': [('edit_type', '=', 'quick_edit')], 'readonly': [('edit_type', '=', 'none')]}" widget="section_and_note_one2many" mode="tree" context="{'default_fsm_recurring_id': active_id,
                                      'default_interval_type': 'weekly',
                                      'default_interval_frequency': '6',
                                      'default_is_abstract': '1',
                                      'form_view_ref': 'fieldservice_recurring.fsm_frequency_form_view',}">
                        <tree>
                            <field name="name" />
                            <field name="week_day" />
                            <field name="interval_frequency" />
                            <field name="planned_hour" widget="float_time" />
                            <field name="interval_type" />
                            <field name="use_byweekday" invisible="1" />
                            <field name="use_bymonth" invisible="1" />
                            <field name="fsm_recurring_id" invisible="1" readonly="0" />
                        </tree>
                    </field>
                </group>
            </xpath>
        </field>
    </record>
    <record id="model_fsm_recurring_action_convert_to_advanced" model="ir.actions.server">
        <field name="name">Convert FSM Recurring to advanced</field>
        <field name="model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_convert_to_advanced()</field>
    </record>
    <record id="model_fsm_recurring_action_convert_to_monthly" model="ir.actions.server">
        <field name="name">Convert FSM Recurring to monthly</field>
        <field name="model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_convert_to_monthly()</field>
    </record>
    <record id="model_fsm_recurring_action_restore_abstract_frequencies" model="ir.actions.server">
        <field name="name">Restore FSM Recurring abstract frequencies</field>
        <field name="model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_model_id" ref="fieldservice_recurring.model_fsm_recurring"/>
        <field name="binding_view_types">form</field>
        <field name="state">code</field>
        <field name="code">action = records.action_restore_abstract_frequencies()</field>
    </record>
</odoo>
