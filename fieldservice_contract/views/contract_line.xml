<?xml version="1.0" encoding="utf-8" ?>
<odoo>
   <!--FORM view-->
    <record id="contract_line_form_view" model="ir.ui.view">
        <field name="name">contract.line form view (in contract)</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//form//field[@name='recurring_invoicing_type']"
                position="after"
            >
               <field name="invoice_policy" />
            </xpath>
            <group name="recurrence_info" position="inside">
                <group name="fsm">
                    <field name="fsm_recurring_id" />
                    <field name="fsm_direct_order_id" />
                    <field name="fsm_location_id" />
                    <field name="fsm_frequency_set_id" />
                    <field name="fsm_order_by_year_count" />
                    <field name="avg_price_unit_fsm_order" />
                </group>
            </group>
        </field>
    </record>
    <record id="contract_contract_form_view" model="ir.ui.view">
        <field name="name">contract tree view (in contract)</field>
        <field name="model">contract.contract</field>
        <field name="inherit_id" ref="contract.contract_contract_form_view" />
        <field name="arch" type="xml">
            <field name="uom_id" position="after">
                <field name="fsm_frequency_set_id" />
                <field name="invoice_policy" optional="hide" />
            </field>
            <field name="product_id" position="before">
               <field name="fsm_location_id" />
            </field>
        </field>
    </record>
    <record id="contract_line_search_view_responsible_location" model="ir.ui.view">
        <field name="name">contract.line.search.responsible_location</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_search_view" />
        <field name="arch" type="xml">
            <field name="last_date_invoiced" position="after">
                <field name="contract_user_id"/>
                <field name="fsm_location_id"/>
            </field>
            <filter name="is_auto_renew" position="after">
                <filter name="active" domain="[('active', '=', True)]" />
            </filter>
        </field>
    </record>
    <record id="contract_line_tree_view" model="ir.ui.view">
        <field name="name"> contract.line.tree.view</field>
        <field name="model">contract.line</field>
        <field name="inherit_id" ref="contract.contract_line_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_id" position="after">
               <field name="fsm_location_id" optional="true"/>
               <field name="contract_user_id" optional="true"/>
            </field>
        </field>
    </record>
    <record id="action_location_contract_lines" model="ir.actions.act_window">
        <field name="name">Contract Lines</field>
        <field name="res_model">contract.line</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="fieldservice_contract.contract_line_search_view_responsible_location" />
        <field name="view_id" ref="fieldservice_contract.contract_line_tree_view" />
    </record>
</odoo>
