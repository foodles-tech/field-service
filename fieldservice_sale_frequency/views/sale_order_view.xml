<odoo>
    <record id="view_order_fsm_frequency_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//form//field[@name='product_uom_readonly']" position="after">
                <field
                    name="fsm_frequency_set_id"
                    context="{'default_is_abstract': True}"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field
                    name="fsm_order_type_id"
                    options="{'no_create': True, 'no_open': True}"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree/field[@name='product_uom_qty']"
                position="after"
            >
                <field
                    name="fsm_frequency_set_id"
                    context="{'default_is_abstract': True}"
                    options="{'no_create': True, 'no_open': True}"
                />
                <field
                    name="fsm_order_type_id"
                    options="{'no_create': True, 'no_open': True}"
                />
            </xpath>
        </field>
    </record>
</odoo>
