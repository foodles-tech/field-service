<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Field Service Order Form Extended-->
    <record id="fsm_order_form" model="ir.ui.view">
        <field name="name">fsm.order.form</field>
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_form" />
        <field name="arch" type="xml">
            <field name="person_id" position="after">
                <field name="crew_worker_ids" widget="many2many_tags" />
            </field>
            <field name="person_ids" position="after">
                <field
                    name="crew_member_ids"
                    nolabel="1"
                    context="{'default_fsm_order_id': active_id }"
                >
                    <tree>
                        <field name="fsm_worker_id" />
                        <field name="scheduled_date_start" />
                        <field name="scheduled_duration" widget="float_time" />
                        <field name="scheduled_date_end" />
                    </tree>
                </field>
                <field name="crew_total_duration" widget="float_time" />
            </field>
        </field>
    </record>

    <record id="fsm_order_calendar_view" model="ir.ui.view">
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_calendar_view" />
        <field name="arch" type="xml">
            <field name="city" position="after">
                 <field
                    name="crew_worker_ids"
                    write_model="fsm.worker.calendar.filter"
                    write_field="fsm_worker_id"
                />
            </field>
        </field>
    </record>


    <record id="fsm_order_tree_view" model="ir.ui.view">
        <field name="model">fsm.order</field>
        <field name="inherit_id" ref="fieldservice.fsm_order_tree_view" />
        <field name="arch" type="xml">
            <field name="person_id" position="after">
                <field name="crew_worker_ids" widget="many2many_tags" />
            </field>
        </field>
    </record>


    <record id="crew_member_ids_view_tree" model="ir.ui.view">
        <field name="model">fsm.order.member</field>
        <field name="arch" type="xml">
            <tree string="Crew Members">
                <field name="fsm_worker_id" />
                <field name="fsm_order_id" />
            </tree>
        </field>
    </record>

    <record id="crew_member_ids_view_form" model="ir.ui.view">
        <field name="model">fsm.order.member</field>
        <field name="arch" type="xml">
            <form string="Crew Members">
                <group>
                    <field name="fsm_order_id" invisible="1" />
                    <field name="fsm_worker_id" />
                    <field name="scheduled_date_start" />
                    <field name="scheduled_duration" />
                    <field name="scheduled_date_end" />
                </group>
            </form>
        </field>
    </record>

    <record id="crew_member_ids_view_search" model="ir.ui.view">
        <field name="name">crew.member_ids.form.search</field>
        <field name="model">fsm.order.member</field>
        <field name="arch" type="xml">
            <search string="FSM Crew Members">
                <field name="fsm_worker_id" />
                <field name="fsm_order_id" />
            </search>
        </field>
    </record>

</odoo>
