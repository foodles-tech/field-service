<?xml version="1.0" encoding="utf-8" ?>
<odoo>    <!-- Field Service Order Form Extended-->
    <record id="fsm_recurring_form_view" model="ir.ui.view">
        <field name="model">fsm.recurring</field>
        <field name="inherit_id" ref="fieldservice_recurring_quick_edit.fsm_recurring_form_view" />
        <field name="arch" type="xml">
            <field name="person_id" position="after">
                <field name="crew_worker_ids" widget="many2many_tags" />
            </field>

            <xpath
                expr="//field[@name='fsm_order_ids']/tree/field[@name='person_id']"
                position="after"
            >
                <field name="crew_worker_ids" widget="many2many_tags" />
            </xpath>

            <!-- add workers in frequencies -->
            <field name="fsm_order_ids" position="after">
                <group>
                    <field
                        name="active_crew_member_ids"
                        widget="section_and_note_one2many"
                        context="{'default_fsm_recurring_id': active_id}"
                        mode="tree,form"
                        groups="base.group_system"
                        readonly="1"
                    >
                        <tree>
                            <field name="fsm_frequency_rule_id" />
                            <field name="fsm_worker_id" />
                        </tree>
                    </field>
                </group>
            </field>
            <xpath
                expr="//field[@name='fsm_quick_edit_concrete_frequency_ids']/tree/field[@name='interval_type']"
                position="after"
            >
                <field name="fsm_worker_ids" widget="many2many_tags" />
            </xpath>

            <xpath 
                expr="//field[@name='fsm_advanced_concrete_frequency_ids']/tree/field[@name='interval_type']"
                position="after"
            >
                <field name="fsm_worker_ids" widget="many2many_tags" />
            </xpath>
        </field>
    </record>

    <record id="recurring_crew_member_ids_view_form" model="ir.ui.view">
        <field name="model">fsm.recurring.order.member</field>
        <field name="arch" type="xml">
            <form string="Recurring Crew Members">
                <group>
                    <field name="fsm_recurring_id" invisible="1" />
                    <field name="fsm_frequency_rule_id" />
                    <field name="fsm_worker_id" />
                </group>
            </form>
        </field>
    </record>

</odoo>
