<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_employee_view_form_crew" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.fsm_crew</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button
                    type="object"
                    name="action_view_fsm_order"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    attrs="{'invisible': [('fsm_order_count','=',0)]}"
                    groups="fieldservice.group_fsm_user">
                    <field name="fsm_order_count" widget="statinfo" string="FSM Orders"/>
                </button>
                <button
                    type="object"
                    name="action_view_fsm_recurring"
                    class="oe_stat_button"
                    icon="fa-calendar"
                    attrs="{'invisible': [('fsm_recurring_count','=',0)]}"
                    groups="fieldservice.group_fsm_user">
                    <field name="fsm_recurring_count" widget="statinfo" string="FSM Recurring"/>
                </button>
            </div>
        </field>
    </record>
</odoo>
